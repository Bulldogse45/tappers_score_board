<div class="container padding-top-50">
  <%= bootstrap_form_for @score, url: game_scores_path do |f| %>
    <%= f.collection_select(:game_id, Game.all, :id, :name, { include_blank:true}) %>
    <%= f.number_field :amount %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Add New Score" %>
  <% end %>
</div>
